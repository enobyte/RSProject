<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carview_height"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center">

                <ImageView
                    android:id="@+id/nphoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hugh" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="0.26"
                android:orientation="vertical">

                <com.rsproject.widget.TextViewPlus
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:maxLines="1"
                    android:textColor="@color/green_5"
                    android:text="Eno"
                    app:customFont="fonts/DroidSerif-Bold.ttf" />

                <com.rsproject.widget.TextViewPlus
                    android:id="@+id/desc_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:ellipsize="end"
                    android:maxLength="85"
                    android:maxLines="1"
                    android:text="rencana pencalonan sebagai presiden hal yang akan terjadi"
                    app:customFont="fonts/RobotoRegular.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <com.rsproject.widget.TextViewPlus
                        android:id="@+id/ndate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="12/09/2015 19:22"
                        android:textSize="9sp"
                        app:customFont="fonts/RobotoMedium.ttf" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

