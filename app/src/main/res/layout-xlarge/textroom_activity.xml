<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linierChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_text_chat"
        android:orientation="vertical"
        android:weightSum="1">


        <RelativeLayout
            android:id="@+id/rtextroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tgljam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="19-02-2016 15:44"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/leftSMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tgljam"
                android:padding="5dp"
                android:textSize="@dimen/text_chat"
                android:text="contoh text SMS contoh text SMS contoh text SMS contoh text SMS" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

