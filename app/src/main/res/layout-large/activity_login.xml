<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bglogin"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="@dimen/image_logo"
            android:layout_height="@dimen/image_logo"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_toplogo"
            android:src="@drawable/dell" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/all_margin_layout"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_enter_login"
                android:layout_marginBottom="@dimen/margin_enter_login"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:hint="Username"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/pass_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_enter_login"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/all_margin_layout"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">


            <com.rsproject.widget.TextViewPlus
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="@dimen/margin_bottom_btn_login"
                android:background="@drawable/rounded_btn"
                android:text="LOGIN"
                android:textSize="25sp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/blue_11"
                app:customFont="fonts/AvenirNext-Bold.ttf" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>